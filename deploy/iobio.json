{
  "builders": [
    {
      "type": "amazon-ebs",
      "region": "us-east-1",
      "source_ami_filter": {
        "filters": {
          "virtualization-type": "hvm",
          "name": "ubuntu/images/hvm-ssd/ubuntu-bionic-18.04-amd64-server-*",
          "root-device-type": "ebs"
        },
        "owners": [
          "099720109477"
        ],
        "most_recent": true
      },
      "instance_type": "m5.xlarge",
      "ssh_username": "ubuntu",
      "ami_name": "iobio-services {{timestamp}}",
      "ebs_optimized": true,
      "launch_block_device_mappings": [
        {
          "device_name": "/dev/sda1",
          "volume_size": 150,
          "volume_type": "gp2",
          "delete_on_termination": true
        },
        {
          "device_name": "/dev/sda2",
          "volume_type": "gp2",
          "snapshot_id": "snap-0a9cf39a78746b9c0",
          "delete_on_termination": true
        }
      ]
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "inline": ["mkdir docker"]
    },    
    {
      "type": "file",
      "source": "../Makefile",
      "destination": "Makefile"
    },
    {
      "type": "file",
      "source": "../docker/traefik-stack.yml",
      "destination": "docker/traefik-stack.yml"
    },
    {
      "type": "file",
      "source": "../docker/iobio-stack.yml",
      "destination": "docker/iobio-stack.yml"
    },
    {
      "type": "shell",
      "script": "setup.sh",
      "expect_disconnect": true
    },
    {
      "type": "shell",
      "script": "provision.sh"
    }
  ]
}
